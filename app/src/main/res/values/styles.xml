<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="secondary_text_style">
        <item name="android:color">@color/secondary_text</item>
        <item name="android:textSize">@dimen/default_secondary_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="primary_text_style">
        <item name="android:color">@color/primary_text</item>
        <item name="android:textSize">@dimen/default_primary_text_size</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="button_primary_Style">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">@dimen/default_button_stroke_width</item>
        <item name="elevation">@dimen/default_card_elevation</item>
    </style>

    <style name="avatar_profile_image_style">
        <item name="android:elevation">@dimen/default_card_elevation</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">@dimen/default_profile_avatar_stroke_width</item>
        <item name="android:padding">@dimen/default_profile_avatar_padding</item>
    </style>

    <style name="shimmer_primary_text_style" parent="primary_text_style">
        <item name="android:background">@color/shimmer_child_items_background</item>
    </style>

    <style name="shimmer_secondary_text_style" parent="secondary_text_style">
        <item name="android:background">@color/shimmer_child_items_background</item>
    </style>

    <style name="shimmer_avatar_profile_image_style" parent="avatar_profile_image_style">
        <item name="android:background">@color/shimmer_child_items_background</item>
    </style>

</resources>